<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="20dp"
    android:elevation="10dp"
    android:background="@drawable/homescreen_tiles">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/default_logo"
        android:layout_gravity="center"
        android:layout_weight="0.1"/>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_weight="3">

        <TextView
            android:id="@+id/reportno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report No"
            android:fontFamily="@font/euclidbold"
            android:textColor="@color/primaryBackground"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/incident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incident"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/euclidmedium"
            android:textColor="@color/primaryBackground"/>

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:fontFamily="@font/euclidregular"
            android:textColor="@color/primaryBackground"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/viewBtn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/viewicon"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"/>

</LinearLayout>