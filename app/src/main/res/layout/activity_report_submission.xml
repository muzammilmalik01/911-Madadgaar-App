<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reportSubmission"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/primaryBackground"
    android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="22sp"
                android:fontFamily="@font/euclidmedium"
                android:textColor="@color/secondaryText"
                android:layout_margin="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                >

                <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/addressTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Address"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/euclidmedium"
                    android:textColor="@color/primaryText"
                    android:gravity="center_vertical"/>

                <Button
                    android:id="@+id/getData"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="📍"
                    android:fontFamily="@font/euclidmedium"
                    android:textColor="@color/primaryText"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_prime"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/selectIncidentTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Incident:"
                    android:textSize="20sp"
                    android:fontFamily="@font/euclidmedium"
                    android:textColor="@color/secondaryText"
                    android:layout_marginBottom="10dp"
                    />

                <Spinner
                    android:id="@+id/incident_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:prompt="@string/default_spinner"
                    android:background="@drawable/edittext_field"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/descriptionTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What happened?"
                    android:textSize="20sp"
                    android:fontFamily="@font/euclidmedium"
                    android:textColor="@color/secondaryText"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:id="@+id/editTextTextMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/edittext_field_description"
                    android:ems="10"
                    android:fontFamily="@font/euclidmedium"
                    android:gravity="start|top"
                    android:hint="Description"
                    android:inputType="textMultiLine"
                    android:padding="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What time was it?"
                    android:textSize="20sp"
                    android:fontFamily="@font/euclidmedium"
                    android:textColor="@color/secondaryText"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/time_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time: "
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/euclidmedium"
                    android:textColor="@color/primaryText"
                    android:gravity="center_vertical"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date: "
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/euclidmedium"
                    android:textColor="@color/primaryText"
                    android:gravity="center_vertical"
                    android:padding="5dp"/>

                <Button
                    android:id="@+id/setDTbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Set"
                    android:textAlignment="center"
                    android:fontFamily="@font/euclidmedium"
                    android:textColor="@color/primaryText"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_prime"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>