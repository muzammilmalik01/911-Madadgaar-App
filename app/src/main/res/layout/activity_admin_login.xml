<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.admin_login"
    android:background="@color/primaryBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/admin"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/loginTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/euclidbold"
            android:text="Admin Login"
            android:textAlignment="viewStart"
            android:textColor="@color/secondaryText"
            android:textSize="40sp" />


        <EditText
            android:id="@+id/adminID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="number"
            android:background="@drawable/edittext_field"
            android:hint="Admin ID"
            android:padding="10dp"
            android:fontFamily="@font/euclidmedium"
            android:textSize="15sp"
            android:textColor="@color/prime"
            android:textColorHint="@color/prime"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            />

        <EditText
            android:id="@+id/PIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberPassword"
            android:background="@drawable/edittext_field"
            android:hint="PIN"
            android:padding="10dp"
            android:fontFamily="@font/euclidmedium"
            android:textSize="15sp"
            android:textColor="@color/prime"
            android:textColorHint="@color/prime"
            android:textAlignment="center"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@drawable/button_prime"
            android:fontFamily="@font/euclidmedium"
            android:textColor="@color/primaryText"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/fulllogollg"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>