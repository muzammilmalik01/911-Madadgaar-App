<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@color/primaryBackground">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loginanim"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/loginTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/euclidbold"
                android:text="Login"
                android:textAlignment="viewStart"
                android:textColor="@color/secondaryText"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/cnicET"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_field"
                android:drawableRight="@drawable/idcardlogo"
                android:ems="10"
                android:fontFamily="@font/euclidmedium"
                android:hint="Enter CNIC"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:textColor="@color/primaryBackground"
                android:textColorHint="@color/prime"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/phoneET"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_field"
                android:drawableRight="@drawable/smartphonelogo"
                android:ems="10"
                android:fontFamily="@font/euclidmedium"
                android:hint="Enter Phone (+923XXXXXXXXX)"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:textColor="@color/primaryBackground"
                android:textColorHint="@color/prime"
                android:textSize="17sp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_prime"
                    android:fontFamily="@font/euclidmedium"
                    android:text="Login"
                    android:textColor="@color/primaryText"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_marginEnd="5dp"/>

                <Button
                    android:id="@+id/regBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Register"
                    android:background="@drawable/button_prime"
                    android:fontFamily="@font/euclidmedium"
                    android:textColor="@color/primaryText"
                    android:layout_margin="10dp"
                    android:layout_marginStart="5dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>