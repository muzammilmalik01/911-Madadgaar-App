<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.admin_login"
    android:background="@color/primaryBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/admin"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/adminID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="number"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_field"
            android:hint="Admin ID"
            android:padding="10dp"
            android:fontFamily="@font/euclidmedium"
            android:textSize="15sp"
            android:textColor="@color/prime"
            android:textColorHint="@color/prime"
            android:textAlignment="center"
            android:layout_marginBottom="7dp"
            />

        <EditText
            android:id="@+id/PIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberPassword"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_field"
            android:hint="PIN"
            android:padding="10dp"
            android:fontFamily="@font/euclidmedium"
            android:textSize="15sp"
            android:textColor="@color/prime"
            android:textColorHint="@color/prime"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="7dp"/>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@drawable/button_prime"
            android:fontFamily="@font/euclidmedium"
            android:textColor="@color/primaryText"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
</ScrollView>