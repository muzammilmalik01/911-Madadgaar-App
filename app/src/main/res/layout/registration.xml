<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainlinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".user.Registration"
    android:background="@color/primaryBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/registeranim"/>

            <TextView
                android:id="@+id/registerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/euclidbold"
                android:text="Register"
                android:textAlignment="viewStart"
                android:textColor="@color/secondaryText"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/CNICET"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_field"
                android:drawableRight="@drawable/idcardlogo"
                android:ems="10"
                android:fontFamily="@font/euclidmedium"
                android:hint="Enter CNIC"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:textColor="@color/primaryBackground"
                android:textColorHint="@color/primaryBackground"
                android:textSize="17sp"
                android:maxLength="13"/>

            <EditText
                android:id="@+id/PHONEET"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_field"
                android:drawableRight="@drawable/smartphonelogo"
                android:ems="10"
                android:fontFamily="@font/euclidmedium"
                android:hint="Enter Phone (+923XXXXXXXXX)"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:textColor="@color/primaryBackground"
                android:textColorHint="@color/primaryBackground"
                android:textSize="17sp"
                android:maxLength="10"/>

            <EditText
                android:id="@+id/NAMEET"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_field"
                android:drawableRight="@drawable/user"
                android:ems="10"
                android:fontFamily="@font/euclidmedium"
                android:hint="Enter Name"

                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:textColor="@color/primaryBackground"
                android:textColorHint="@color/primaryBackground"
                android:textSize="17sp"
                android:maxLength="50"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/REGBTN"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Register"
                android:background="@drawable/button_prime"
                android:fontFamily="@font/euclidmedium"
                android:textColor="@color/primaryText"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/LoginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account? Login"
                android:textAlignment="center"
                android:fontFamily="@font/euclidmedium"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/primaryText"
                />

            <ImageView
                android:id="@+id/adminBtn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/fulllogollg" />
        </LinearLayout>
</ScrollView>