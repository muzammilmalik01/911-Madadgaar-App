<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".OTP.OTP_Verify"
    android:padding="20dp"
    android:background="@color/primaryBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/otpverifyanim"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/euclidbold"
                android:text="OTP Sent"
                android:textAlignment="center"
                android:textColor="@color/secondaryText"
                android:textSize="35sp" />

            <EditText
                android:id="@+id/userOTPET"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_field"
                android:drawableRight="@drawable/smartphonelogo"
                android:ems="10"
                android:fontFamily="@font/euclidmedium"
                android:hint="Enter 6 Digit OTP"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:textColor="@color/primaryBackground"
                android:textColorHint="@color/prime"
                android:textSize="17sp"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/verify_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_prime"
                android:fontFamily="@font/euclidmedium"
                android:text="Verify"
                android:textColor="@color/primaryText"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:layout_gravity="center" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loadinAnim"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loadinganim"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>