<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.confirmation_screen"
    android:background="@color/primaryBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/homescreen_tiles">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/fulllogo"
                />
                <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/tick"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report Submitted!"
                android:textAlignment="center"
                android:textColor="@color/primaryBackground"
                android:textSize="25sp"
                android:fontFamily="@font/euclidbold"
                android:layout_marginBottom="10dp"/>



        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report No:"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/euclidmedium"
            android:textColor="@color/secondaryText"/>

        <TextView
            android:id="@+id/reportnotxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/euclidregular"
            android:textColor="@color/primaryText"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submitted by:"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/euclidmedium"
            android:textColor="@color/secondaryText"/>

        <TextView
            android:id="@+id/usernametxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/euclidregular"
            android:textColor="@color/primaryText"/>
        <TextView
            android:id="@+id/usercnictxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/euclidregular"
            android:textColor="@color/primaryText"/>

        <Button
            android:id="@+id/closeBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Close"
            android:background="@drawable/button_prime"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            android:fontFamily="@font/euclidmedium"
            android:textSize="11sp"/>


    </LinearLayout>
</ScrollView>